syntax on

set nonumber
set ruler
set showmode
set hidden

set tabstop=2
set softtabstop=2
set shiftwidth=2
set smartindent
set smarttab
set expandtab
set autoindent

set nobackup
set noswapfile
set nowritebackup

set noignorecase
set hlsearch
set incsearch
set linebreak

set backspace=indent,eol,start

set ttyfast
